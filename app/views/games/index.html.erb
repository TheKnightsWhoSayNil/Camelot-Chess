<div class="dashboard-container">
  <div class="available-games-section">
    <div class="available-list">
      <h1> Available Games </h1>
    </div>

    <div class="cards">
      <% @games.each do |game| %>
      <div class="card">
        <div class="card-header">
          <h3> Game: <%= game.name %> </h3>
        </div>
        <div class="card-copy">
          <span class="badge-default"><%= game.white_user.nil? ? 'White is open' : 'Black is Open' %><br /></span><br>
          <span class="badge-default"> Date created: <%= game.created_at.to_date %> <br /></span><br>
          <span class="badge-default"> Opponent: <%= game.white_user.email %> <br /></span>
          <%= button_to 'Join game', join_game_path(game), { class: 'btn btn-success card-btn', action: :join, method: :patch } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
